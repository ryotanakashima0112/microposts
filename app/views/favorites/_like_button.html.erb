  <% if current_user.liking?(micropost) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :micropost, micropost.id %>
      <%= f.submit 'Unlike', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build, html: {method: :post}) do |f| %>
      <%= hidden_field_tag :micropost, micropost.id %>
      <%= f.submit 'Like', class: 'btn btn-primary  btn-xs' %>
    <% end %>
  <% end %>